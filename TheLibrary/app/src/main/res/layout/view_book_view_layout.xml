<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/image_view_id"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/default_img"

            />

        <TextView
            android:id="@+id/book_name_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Hanuman Chalisa"
            android:textAlignment="center"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/book_rack_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Rack : 5"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/book_step_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Step : 5"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/book_colm_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Column : 2"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/book_pos_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Position : fromt"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Description"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/book_desc_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="ssffwtdfeytfyetfgccgscvvscjhsuucsuuuys lg yuuygygyu egeif efheif e e fehfe f efhe f efo efefjoe ff s wo ww we hfq q  qqhuwheh"

            android:textSize="15dp" />

        <Button
            android:id="@+id/edit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:minHeight="48dp"
            android:text="Edit" />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#D32F2F"
            android:minHeight="48dp"
            android:text="DELETE" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>